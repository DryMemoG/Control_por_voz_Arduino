void loop() {
   if(Serial.available() > 0){
  // cardID = "";
  // rfid1();
   
  
 
  
 rbyte = Serial.read();
    /*******************RFID*******************************/
    if(rbyte == "a"){
     // Revisamos si hay nuevas tarjetas  presentes
        
           
            
   
    }
    /*************************FIN RFID*********************************/ 

    if(rbyte == 98){
      lcd.clear();
      lcd.home();
      lcd.print("Encendiendo Luz");
      lcd.setCursor(0,1);
      lcd.print("Espere...");
      digitalWrite(luz1, HIGH);
      delay(t);
      digitalWrite(luz2, HIGH);
      delay(t);
      digitalWrite(luz3, HIGH);
      delay(t);
      digitalWrite(luz4, HIGH);
       lcd.clear();
      lcd.home();
      lcd.print("Tarea Completa");
      lcd.setCursor(0,1);
      lcd.print("A la Espera");
      
    }
    
    if(rbyte == 99){
      lcd.clear();
      lcd.home();
      lcd.print("Apagando Luz");
      lcd.setCursor(0,1);
      lcd.print("Espere...");
      digitalWrite(luz4, LOW);
      delay(t);
      digitalWrite(luz3, LOW);
      delay(t);
      digitalWrite(luz2, LOW);
      delay(t);
      digitalWrite(luz1, LOW);
       lcd.clear();
      lcd.home();
      lcd.print("Tarea Completa");
      lcd.setCursor(0,1);
      lcd.print("A la Espera");
      
    }
    if (rbyte == 100)
    {
       float h = dht.readHumidity();
  // Obtiene la Temperatura en Celsius
  float t = dht.readTemperature();
    lcd.clear();
    lcd.home();
    lcd.print("Temp: ");
    lcd.setCursor(7,0);
    lcd.print(t);
    lcd.setCursor(12,0);
    lcd.print("*C"); 
    lcd.setCursor(0,1);
    lcd.print("Humedad: ");
    lcd.setCursor(10,1);
    lcd.print(h);
    lcd.setCursor(14,1);
    lcd.print("%");
    }
    
   
   }
} 
